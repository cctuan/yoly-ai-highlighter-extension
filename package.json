{
  "name": "yoly-highlighter",
  "displayName": "Yoly highlighter",
  "version": "0.0.1",
  "description": "Able to highlight the webpage to help you reading faster.",
  "author": "georgeiscoming@gmail.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.11.0",
    "openai": "^4.56.2",
    "plasmo": "0.88.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "storage",
      "activeTab"
    ],
    "options_ui": {
      "page": "options.html",
      "open_in_tab": true
    },
    "host_permissions": [
      "https://*/*"
    ]
  }
}
